

<section class="container-sm">
  <div class="recipe-food-section flex justify-center items-center">
    <div class="recipe-food-container">
      <h2 class="text-2xl font-semibold">
        Add ingredients for 
        <span class="text text-primary small"><%= @recipe.name %></span>
      </h2>

      <div class="recipe-food-form-container mt-5 border p-5">
        <%= form_with model: [@recipe, @recipe_food], class: "needs-validation", novalidate: true do |f|%>
          <div class="form-group mb-5">
            <%= f.collection_select :food_id, Food.order(:name), :id, :name_with_measurement_unit, { prompt: "--Select Ingredients--" }, class: "form-control" %>
          </div>

          <div class="form-group mb-5">
            <%= f.number_field :quantity, placeholder: 'Quantity', required: true, step: '0.01', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Add New Ingredient", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
